{
    "name": "skillcraft-io/hook-flow",
    "description": "A powerful and flexible hook system for Laravel applications",
    "version": "0.1.0",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Skillcraft\\HookFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Skillcraft\\HookFlow\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2|^8.3",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0",
        "phpstan/phpstan": "^2.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Skillcraft\\HookFlow\\HookFlowServiceProvider"
            ],
            "aliases": {
                "Hook": "Skillcraft\\HookFlow\\Facades\\Hook"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
